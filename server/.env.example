# Database Configuration
# For Railway: DATABASE_URL=${{Postgres.DATABASE_URL}}
DATABASE_URL=postgresql://area_user:area_password@localhost:5432/area_db

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Frontend URL (for OAuth redirects)
# Production Railway:
FRONTEND_URL=https://web-production-963ad.up.railway.app
# Local dev: FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this

# Google/Gmail OAuth Configuration

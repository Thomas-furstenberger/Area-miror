generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String?
  name          String?
  avatarUrl     String?
  emailVerified Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  githubId      Int?           @unique
  githubLogin   String?        @unique
  oauthAccounts OAuthAccount[]
  sessions      Session[]
  areas         Area[]

  @@map("users")
}

model OAuthAccount {
  id                String    @id @default(cuid())
  userId            Int
  provider          String
  providerAccountId String
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?
  email             String?
  name              String?
  avatarUrl         String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("oauth_accounts")
}

model Session {
  id        String   @id @default(cuid())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Area {
  id          String   @id @default(cuid())
  userId      Int
  name        String
  description String?
  active      Boolean  @default(true)

  actionService   String
  actionType      String
  actionConfig    Json?

  reactionService String
  reactionType    String
  reactionConfig  Json?

  lastTriggered DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("areas")
}
